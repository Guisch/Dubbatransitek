<!doctype html>
<html>

<head>
  <title>Dubbatransitek</title>
  <% include ../partials/head %>
    </style>
</head>

<body>
  <% include ../partials/header %>

    <div class="container">
      <div class="col-sm-6 col-sm-offset-3">

        <h1>
                    <span class="fa fa-user"></span>
                    <%= lang.pages.createAccount %>
                </h1>

        <% if (message.length > 0) { %>
          <div class="alert alert-danger">
            <%= message %>
          </div>
          <% } %>

            <!-- LOGIN FORM -->
            <form action="/connect/local" method="post">
              <div class="form-group">
                <label><%= lang.pages.username %></label>
                <input type="text" class="form-control" name="username">
              </div>
              <div class="form-group">
                <label><%= lang.pages.password %></label>
                <input type="password" class="form-control" name="password">
              </div>

              <button type="submit" class="btn btn-warning btn-lg"><%= lang.pages.createAccount %></button>
            </form>

            <hr>

            <p>
              <a href="/profile">
                <%= lang.pages.backToProfile %>
              </a>
            </p>

      </div>
    </div>
</body>

</html>
